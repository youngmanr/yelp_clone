<p><%= @restaurant.name %></p>
<p><%= @restaurant.description %></p>
<h3>Reviews for <%= @restaurant.name %></h3>
<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.thoughts %>, <strong> <%= star_rating(review.rating) %></strong>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>